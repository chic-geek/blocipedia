.row
  .col-md-12
    %h1 My Wikis

    .well.well-sm
      = link_to "New wiki", new_wiki_path, class: "btn btn-primary btn-sm"

    .list-group
      - @wikis.each do |wiki|

        .list-group-item
          = link_to wiki.title, wiki

          .pull-right
            = link_to "", edit_wiki_path(wiki), class: "glyphicon glyphicon-edit text-muted", title: "edit-item"
            \&nbsp;
            = link_to "", wiki, class: "glyphicon glyphicon-trash text-danger", title: "delete-item", :method => :delete
