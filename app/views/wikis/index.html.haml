.row
  .col-md-12
    %h1 My Wikis

  .col-md-8
    .list-group
      - @wikis.each do |wiki|

        .list-group-item
          - if wiki.private?
            %span.glyphicon.glyphicon-lock.text-muted
            \&nbsp;
          = link_to wiki.title, wiki

          .pull-right
            = link_to "", edit_wiki_path(wiki), class: "glyphicon glyphicon-edit text-muted", title: "edit-item"
            \&nbsp;
            = link_to "", wiki, class: "glyphicon glyphicon-trash text-danger", title: "delete-item", :method => :delete

  .col-md-4
    = link_to "Create a wiki", new_wiki_path, class: "btn btn-primary"
