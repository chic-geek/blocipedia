.row
  .col-md-6.col-md-offset-3
    %h1 Create new wiki

    = form_for @wiki do |f|
      .form-group
        = f.label :title
        = f.text_field :title, class: "form-control"
      .form-group
        = f.label :body
        = f.text_area :body, class: "form-control"
      .form-group
        = f.submit "Create wiki", class: "btn btn-success"
